<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>bank.presentation.login.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>client-accounts</servlet-name>
        <servlet-class>bank.presentation.client.accounts.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>client-accounts-movements</servlet-name>
        <servlet-class>bank.presentation.client.accounts.movements.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>client-link</servlet-name>
        <servlet-class>bank.presentation.client.link.controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cashier-withdrawal</servlet-name>
        <servlet-class>bank.presentation.cashier.withdrawal.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cashier-deposit</servlet-name>
        <servlet-class>bank.presentation.cashier.deposit.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cashier-transfer</servlet-name>
        <servlet-class>bank.presentation.cashier.transfer.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>client-transfer</servlet-name>
        <servlet-class>bank.presentation.client.transfer.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login/view</url-pattern>
        <url-pattern>/login/login</url-pattern>
        <url-pattern>/login/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>client-accounts</servlet-name>
        <url-pattern>/client/accounts/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>client-accounts-movements</servlet-name>
        <url-pattern>/client/accounts/movements/view</url-pattern>
        <url-pattern>/client/accounts/movements/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>client-link</servlet-name>
        <url-pattern>/client/link/view</url-pattern>
        <url-pattern>/client/link/verify</url-pattern>
        <url-pattern>/client/link/link</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cashier-transfer</servlet-name>
        <url-pattern>/cashier/transfer/view</url-pattern>
        <url-pattern>/cashier/transfer/transfer</url-pattern>
        <url-pattern>/cashier/transfer/clear-origin</url-pattern>
        <url-pattern>/cashier/transfer/load-origin-id</url-pattern>
        <url-pattern>/cashier/transfer/validate-origin-account</url-pattern>
        <url-pattern>/cashier/transfer/validate-origin-id</url-pattern>
        <url-pattern>/cashier/transfer/clear-destination</url-pattern>
        <url-pattern>/cashier/transfer/load-destination-id</url-pattern>
        <url-pattern>/cashier/transfer/validate-destination-account</url-pattern>
        <url-pattern>/cashier/transfer/validate-destination-id</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cashier-withdrawal</servlet-name>
        <url-pattern>/cashier/withdrawal/view</url-pattern>
        <url-pattern>/cashier/withdrawal/withdrawal</url-pattern>
        <url-pattern>/cashier/withdrawal/clear</url-pattern>
        <url-pattern>/cashier/withdrawal/load</url-pattern>
        <url-pattern>/cashier/withdrawal/validate-account</url-pattern>
        <url-pattern>/cashier/withdrawal/validate-id</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cashier-deposit</servlet-name>
        <url-pattern>/cashier/deposit/view</url-pattern>
        <url-pattern>/cashier/deposit/deposit</url-pattern>
        <url-pattern>/cashier/deposit/clear</url-pattern>
        <url-pattern>/cashier/deposit/load</url-pattern>
        <url-pattern>/cashier/deposit/validate-account</url-pattern>
        <url-pattern>/cashier/deposit/validate-id</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>client-transfer</servlet-name>
        <url-pattern>/client/transfer/view</url-pattern>
        <url-pattern>/client/transfer/transfer</url-pattern>
        <url-pattern>/client/transfer/search</url-pattern>
        <url-pattern>/client/transfer/clear</url-pattern>
    </servlet-mapping>
</web-app>
